@model MedicineProject.Models.BLs.Customer

@{
    ViewBag.Title = "GetCutomer";
    Layout = "~/Views/Shared/Master.cshtml";
}
<div class="row">
        <div class="col-sm-12">
            <div class="btn-group m-0 pull-right">
                <ol class="breadcrumb hide-phone p-0 m-0">
                    @*<li class="breadcrumb-item"><a href="#">Urora</a></li>
                    <li class="breadcrumb-item"><a href="#">Forms</a></li>
                    <li class="breadcrumb-item active">Form Validation</li>*@
                </ol>
            </div>
            <div class="page-title-box">
                <h4 class="page-title">Customer Entery</h4>
            </div>
        </div>
    </div>
<div class="row">
    <div class="card card-body">
        <h4 class="mt-0 header-title">Customer Registory</h4>
        <p class="text-muted font-14">Please Enter the Valid Information....</p>
        <div class="general-label">
            @*<form class="mb-0">*@

            @using (Html.BeginForm("GetCutomer", "Customer", FormMethod.Post))
            {
                @Html.HiddenFor(n => n.CustomerID)


                <div class="form-group bmd-form-group">
                    <label for="exampleInputEmail1" class="bmd-label-floating ">Customer Name</label>
                    @Html.TextBoxFor(n => n.CustomerName, new { @class = "form-control" })

                    <span class="bmd-help">Enter valid Name..</span>
                </div>

                <div class="form-group bmd-form-group">
                    <label for="exampleInputPassword1" class="bmd-label-floating">Address</label>
                    @Html.TextBoxFor(n => n.Address, new { @class = "form-control" })
                    <span class="bmd-help">Enter valid Address..</span>
                </div>


                <div class="form-group bmd-form-group">
                    <label for="exampleInputPassword1" class="bmd-label-floating">Contact</label>
                    @Html.TextBoxFor(n => n.Contact, new { @class = "form-control" })
                    <span class="bmd-help">Enter valid Contact..</span>
                </div>


                <br />
                <br />

                <div class="text-center">
                    <button type="submit" class="btn btn-primary  btn-raised mb-0">Submit</button>
                    <button class="btn btn-raised btn-danger  mb-0">Cancel</button>
                </div>

            }



            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="myTable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Customer Name</th>
                                    <th>Address</th>
                                    <th>Contact</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in ViewBag.Get)
                                {
                                    <tr>
                                        <td>@item.CustomerName</td>
                                        <td>@item.Address</td>
                                        <td>@item.Contact</td>


                                        <td>
                                            @Html.ActionLink("Edit", "Update", "Customer", new { ID = item.CustomerID }, new { @class = "glyphicon glyphicon-edit", @style = "color:blue" })

                                            @Html.ActionLink("Delete", "Delete", "Customer", new { ID = item.CustomerID }, new { @class = "glyphicon glyphicon-trash", @style = "color:red" })
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>



            @*</form>*@
        </div>
    </div>
</div>
<br /><br />


@section script{


    <script>

        $(document).ready(function () {


            if(@Html.Raw(TempData["bit"])==1)
            {
                Mm("Insert");
            }
            else if(@Html.Raw(TempData["bit"])==2)
            {
                Mm("Update");
            }
            else if(@Html.Raw(TempData["bit"])==3)
            {
                Mm("Delete");
            }

        })


        function Mm(pm)
        {
            if(pm=="Insert")
            {
                toastr.success("Add Data sucessfully");
            }
            else if(pm=="Update")
            {
                toastr.success("updated Data sucessfully");
            }
            else if(pm=="Delete")
            {
                toastr.success("Deleted Data sucessfully");
            }
        }



    </script>




}

