@model MedicineProject.Models.BLs.Employee
@{
    ViewBag.Title = "Employee";
    Layout = "~/Views/Shared/Master.cshtml";
}

    <div class="card-body">
        <h4 class="mt-0 header-title">Employee Registory</h4>
        <p class="text-muted font-14">Please Enter the Valid Information...@*</code>*@.</p>
        <div class="general-label">
            @*<form class="mb-0">*@

            @using (Html.BeginForm("Save", "Employee", FormMethod.Post))
            {
                <div class="form-group bmd-form-group">
                    <label for="exampleInputEmail1" class="bmd-label-floating">Employee Name</label>
                    @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control" })

                    <span class="bmd-help">Enter valid Name..</span>
                </div>

                <div class="form-group bmd-form-group">
                    <label for="exampleInputPassword1" class="bmd-label-floating">CNIC</label>
                    @Html.TextBoxFor(x => x.CNIC, new { @class = "form-control" })
                    <span class="bmd-help">Enter valid Address..</span>
                </div>
                <div class="form-group bmd-form-group">
                    <label for="exampleInputPassword1" class="bmd-label-floating">Contact</label>
                    @Html.TextBoxFor(x => x.Contact, new { @class = "form-control" })
                    <span class="bmd-help">Enter valid Contact..</span>
                </div>

                <div class="form-group bmd-form-group">
                    <label for="exampleInputPassword1" class="bmd-label-floating">Address</label>
                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                    <span class="bmd-help">Enter valid Contact..</span>
                </div>
                <div class="form-group bmd-form-group">
                    <label for="exampleInputEmail1" class="bmd-label-floating ">DateOfJoining</label>
                    <h6 class="text-muted mt-3"></h6>
                    @*<input type="date" id="DOF" class="form-control" />*@
                    @Html.TextBoxFor(x=>x.DateOfJoining, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control" })
                    <span class="bmd-help">Enter valid Date..</span>
                </div>

                <div class="form-group bmd-form-group">
                    <label for="exampleInputPassword1" class="bmd-label-floating">DateOfResign</label>
                    <h6 class="text-muted mt-3"></h6>
                    @Html.TextBoxFor(x => x.DateOfResign, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control" })
                    <span class="bmd-help">Enter valid Date..</span>
                    @*<input type="date" id="DOR" class="form-control" />*@
                </div>

                <div class="form-group bmd-form-group">
                    <label for="exampleInputPassword1" class="bmd-label-floating">Salary</label>
                    @Html.TextBoxFor(x => x.Salary, new { @class = "form-control" })
                    <span class="bmd-help">Enter valid Contact..</span>
                </div>

                <div class="form-group bmd-form-group">
                    <label for="exampleInputPassword1" class="bmd-label-floating">Designation</label>
                    @Html.TextBoxFor(x => x.Designation, new { @class = "form-control" })
                    <span class="bmd-help">Enter valid Contact..</span>
                </div>
                @Html.HiddenFor(x => x.EmployeeID)
                <br />
                <br />

                <div class="text-center">
                    <button type="submit" class="btn btn-primary  btn-raised mb-0">Submit</button>
                    <button type="button" class="btn btn-raised btn-danger  mb-0">Cancel</button>
                </div>

            }



            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="myTable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Employee Name</th>
                                    <th>CNIC</th>
                                    <th>Contact</th>
                                    <th>Address</th>
                                    <th>DateOfJoining</th>
                                    <th>DateOfResign</th>
                                    <th>Salary</th>
                                    <th>Designation</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.Employees)
                                {
                                <tr>
                                    <td>@item.EmployeeName</td>
                                    <td>@item.CNIC</td>
                                    <td>@item.Contact</td>
                                    <td>@item.Address</td>
                                    <td>@item.DateOfJoining</td>
                                    <td class="text-center">
                                        @if (item.DateOfResign==null)
                                        {
                                        <strong class="badge badge-pill badge-success">Still Working</strong>
                                        }
                                        else
                                        {
                                           @item.DateOfResign
                                        }
                                        @*@{item.DateOfResign == DBNull.Value ?}<label>Still Working</label>@{: item.DateOfResign}*@
                                    </td>
                                    @*<td>@item.DateOfResign.ToString("Still working")</td>*@
                                    @*<td>@item.DateOfResign.ToString()==DbNull?"still Working":@item.DateOfResign.ToString("yyyy-MM-dd")</td>*@
                                    <td>@item.Salary</td>
                                    <td>@item.Designation</td>
                                    <td>
                                        @Html.ActionLink("Edit", "Employee", "Employee", new { ID = item.EmployeeID }, new { @class = "glyphicon glyphicon-edit", @style = "color:blue" })
                                        @Html.ActionLink("Delete", "Delete", "Employee", new { ID = item.EmployeeID }, new { @class = "glyphicon glyphicon-trash", @style = "color:red" })
                                    </td>

                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>



            @*</form>*@
        </div>
    </div>
