@model MedicineProject.Models.BLs.Company
@{
    ViewBag.Title = "Company";
    Layout = "~/Views/Shared/Master.cshtml";
}

<div class=" card card-body">
    <h4 class="mt-0 header-title">Company Registory</h4>
    <p class="text-muted font-14">Please Enter the Valid Information...@*</code>*@.</p>
    <div class="general-label">
        @*<form class="mb-0">*@

        @using (Html.BeginForm("Save", "Company", FormMethod.Post))
        {
            <div class="form-group bmd-form-group">
                <label for="exampleInputEmail1" class="bmd-label-floating ">Company Name</label>
                @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })

                <span class="bmd-help">Enter valid Company Name..</span>
            </div>

            <div class="form-group bmd-form-group">
                <label for="exampleInputPassword1" class="bmd-label-floating">Contact</label>
                @Html.TextBoxFor(x => x.Contact, new { @class = "form-control" })
                <span class="bmd-help">Enter valid Contact..</span>
            </div>

            <div class="form-group bmd-form-group">
                <label for="exampleInputPassword1" class="bmd-label-floating">Address</label>
                @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                <span class="bmd-help">Enter valid Address..</span>
            </div>
            @Html.HiddenFor(x => x.CompanyID)
            <br />
            <br />

            <div class="text-center">
                <button type="submit" class="btn btn-primary  btn-raised mb-0">Submit</button>
                <input type="button" class="btn btn-raised btn-danger  mb-0" value="Cancel" />
            </div>
        }



        <div class="panel panel-default">
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="myTable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Employee Name</th>
                                <th>CNIC</th>
                                <th>Address</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.companies)
                            {
                                <tr>
                                    <td>@item.CompanyName</td>
                                    <td>@item.Contact</td>
                                    <td>@item.Address</td>
                                    <td>
                                        @Html.ActionLink("Edit", "Company", "Company", new { ID = item.CompanyID }, new { @class = "glyphicon glyphicon-edit", @style = "color:blue" })
                                        @Html.ActionLink("Delete", "Delete", "Company", new { ID = item.CompanyID }, new { @class = "glyphicon glyphicon-trash", @style = "color:red" })
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>



        @*</form>*@
    </div>
</div>

@section script{


    <script>

        $(document).ready(function () {


            if(@Html.Raw(TempData["bit"])==1)
            {
                Mm("Insert");
            }
            else if(@Html.Raw(TempData["bit"])==2)
            {
                Mm("Update");
            }
            else if(@Html.Raw(TempData["bit"])==3)
            {
                Mm("Delete");
            }

        })


        function Mm(pm)
        {
            if(pm=="Insert")
            {
                toastr.success("Add Data sucessfully");
            }
            else if(pm=="Update")
            {
                toastr.success("updated Data sucessfully");
            }
            else if(pm=="Delete")
            {
                toastr.success("Deleted Data sucessfully");
            }
        }



    </script>




}