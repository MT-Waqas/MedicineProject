@model MedicineProject.Models.BLs.Employee
@{
    ViewBag.Title = "GetCompany";
    Layout = "~/Views/Shared/Master.cshtml";
}

<div class="card-body">
    <h4 class="mt-0 header-title">Company Registory</h4>
    <p class="text-muted font-14">Please Enter the Valid Information...@*</code>*@.</p>
    <div class="general-label">
        @*<form class="mb-0">*@

        @using (Html.BeginForm("Save", "Employee", FormMethod.Post))
        {
            <div class="form-group bmd-form-group">
                <label for="exampleInputEmail1" class="bmd-label-floating ">Employee Name</label>
                @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control" })

                <span class="bmd-help">Enter valid Name..</span>
            </div>

            <div class="form-group bmd-form-group">
                <label for="exampleInputPassword1" class="bmd-label-floating">CNIC</label>
                @Html.TextBoxFor(x => x.CNIC, new { @class = "form-control" })
                <span class="bmd-help">Enter valid Address..</span>
            </div>

            <div class="form-group bmd-form-group">
                <label for="exampleInputPassword1" class="bmd-label-floating">Address</label>
                @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                <span class="bmd-help">Enter valid Contact..</span>
            </div>
            <div class="form-group bmd-form-group">
                <label for="exampleInputEmail1" class="bmd-label-floating ">DateOfJoining</label>
                <input type="date" id="datetime" class="form-control" />
                @Html.TextBoxFor(x => x.DateOfJoining, new { @class = "form-control", })

                <span class="bmd-help">Enter valid Date..</span>
            </div>

            <div class="form-group bmd-form-group">
                <label for="exampleInputPassword1" class="bmd-label-floating">DateOfResign</label>
                @Html.TextBoxFor(x => x.DateOfResign, new { @class = "form-control" })
                <span class="bmd-help">Enter valid Date..</span>
            </div>

            <div class="form-group bmd-form-group">
                <label for="exampleInputPassword1" class="bmd-label-floating">Salary</label>
                @Html.TextBoxFor(x => x.Salary, new { @class = "form-control" })
                <span class="bmd-help">Enter valid Contact..</span>
            </div>

            <div class="form-group bmd-form-group">
                <label for="exampleInputPassword1" class="bmd-label-floating">Designation</label>
                @Html.TextBoxFor(x => x.Designation, new { @class = "form-control" })
                <span class="bmd-help">Enter valid Contact..</span>
            </div>
            @Html.HiddenFor(x => x.EmployeeID)
            <br />
            <br />

            <div class="text-center">
                <button type="submit" class="btn btn-primary  btn-raised mb-0">Submit</button>
                <input class="btn btn-raised btn-danger  mb-0" value="Cancel" />
            </div>

        }



        <div class="panel panel-default">
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="myTable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Employee Name</th>
                                <th>CNIC</th>
                                <th>Address</th>
                                <th>DateOfJoining</th>
                                <th>DateOfResign</th>
                                <th>Salary</th>
                                <th>Designation</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Employees)
                            {
                                <tr>
                                    <td>@item.EmployeeName</td>
                                    <td>@item.CNIC</td>
                                    <td>@item.Contact</td>
                                    <td>@item.Address</td>
                                    <td>@item.DateOfJoining</td>
                                    <td>@item.DateOfResign</td>
                                    <td>@item.Salary</td>
                                    <td>@item.Designation</td>
                                    <td>
                                        @Html.ActionLink("Edit", "GetEmployee", "Employee", new { ID = item.CompanyID }, new { @class = "glyphicon glyphicon-edit", @style = "color:blue" })
                                        @Html.ActionLink("Delete", "Delete", "Employee", new { ID = item.CompanyID }, new { @class = "glyphicon glyphicon-trash", @style = "color:red" })
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>



        @*</form>*@
    </div>
</div>
