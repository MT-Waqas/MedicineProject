@model MedicineProject.Models.BLs.Purchase
@{
    ViewBag.Title = "Purchase";
    Layout = "~/Views/Shared/Master.cshtml";
}

<h2>Purchase</h2>
<div class="card-body">
    <h4 class="mt-0 header-title">Purchase Registory</h4>
    <p class="text-muted font-14">Please Enter the Valid Information...@*</code>*@.</p>
    <div class="general-label">
        @*<form class="mb-0">*@

        @using (Html.BeginForm("Save", "Purchase", FormMethod.Post))
        {
            <div class="form-group bmd-form-group">
                <label for="exampleInputEmail1" class="bmd-label-floating">Employee Name</label>
                @Html.DropDownListFor(x => x.CompanyID, ViewBag.Companies as SelectList, "--Select the Company--", new { @class = "form-control" })

                <span class="bmd-help">Enter valid Name..</span>
            </div>

            <div class="form-group bmd-form-group">
                <label for="exampleInputPassword1" class="bmd-label-floating">Medicine Name</label>
                @Html.DropDownListFor(x => x.MedicineID, ViewBag.Medicines as SelectList, "--Select the Medcines--", new { @class = "form-control" })
                <span class="bmd-help">Enter valid Address..</span>
            </div>
            <div class="form-group bmd-form-group">
                <label for="exampleInputPassword1" class="bmd-label-floating">Quantity</label>
                @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control" })
                <span class="bmd-help">Enter valid Contact..</span>
            </div>

            <div class="form-group bmd-form-group">
                <label for="exampleInputPassword1" class="bmd-label-floating">Item Price</label>
                @Html.TextBoxFor(x => x.ItemPrice, new { @class = "form-control" })
                <span class="bmd-help">Enter valid Contact..</span>
            </div>
            <div class="form-group bmd-form-group">
                <label for="exampleInputEmail1" class="bmd-label-floating ">Date Of Manufacturing</label>
                <h6 class="text-muted mt-3"></h6>
                @*<input type="date" id="DOF" class="form-control" />*@
                @Html.TextBoxFor(x => x.DateOfManufacturing, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control" })
                <span class="bmd-help">Enter valid Date..</span>
            </div>

            <div class="form-group bmd-form-group">
                <label for="exampleInputPassword1" class="bmd-label-floating">Date Of Expiry</label>
                <h6 class="text-muted mt-3"></h6>
                @Html.TextBoxFor(x => x.DateOfExpiry, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control" })
                <span class="bmd-help">Enter valid Date..</span>
                @*<input type="date" id="DOR" class="form-control" />*@
            </div>
            @Html.HiddenFor(x => x.PurchaseID)
            <br />
            <br />
            <div class="text-center">
                <button type="submit" class="btn btn-primary  btn-raised mb-0">Submit</button>
                <button type="button" class="btn btn-raised btn-danger  mb-0">Cancel</button>
            </div>

        }



        <div class="panel panel-default">
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="myTable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Medicine Name</th>
                                <th>CompanyName</th>
                                <th>Quantity</th>
                                <th>ItemPrice</th>
                                <th>DateOfManufacturing</th>
                                <th>DateOfExpiry</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Purchases)
                            {
                                <tr>
                                    <td>@item.MedicineName</td>
                                    <td>@item.CompanyName</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.ItemPrice</td>
                                    <td>@item.DateOfManufacturing</td>
                                    <td>@item.DateOfExpiry</td>
                                    <td>
                                        @Html.ActionLink("Edit", "Purchase", "Purchase", new { ID = item.PurchaseID }, new { @class = "glyphicon glyphicon-edit", @style = "color:blue" })
                                        @Html.ActionLink("Delete", "Delete", "Purchase", new { ID = item.PurchaseID }, new { @class = "glyphicon glyphicon-trash", @style = "color:red" })
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>



        @*</form>*@
    </div>
</div>

@section script{


    <script>

        $(document).ready(function () {


            if(@Html.Raw(TempData["bit"])==1)
            {
                Mm("Insert");
            }
            else if(@Html.Raw(TempData["bit"])==2)
            {
                Mm("Update");
            }
            else if(@Html.Raw(TempData["bit"])==3)
            {
                Mm("Delete");
            }

        })



        function Mm(pm)
        {
            if(pm=="Insert")
            {
                toastr.success("Add Data sucessfully");
            }
            else if(pm=="Update")
            {
                toastr.success("updated Data sucessfully");
            }
            else if(pm=="Delete")
            {
                toastr.success("Deleted Data sucessfully");
            }
        }
    </script>




}